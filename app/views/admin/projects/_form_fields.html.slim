= simple_nested_form_for [:admin, @project], html: { class: 'form-vertical' } do |f|

  ul.nav.nav-tabs
    li.active
      = link_to "General", "#general"
    li
      = link_to "Gallery", "#gallery"

  .tab-content

    #general.tab-pane.fade.in.active
      = f.input :published
      = f.input :slug, disabled: true
      = f.input :title
      = f.input :author
      = f.input :title_picture
      - if f.object.title_picture?
        = link_to f.object.title_picture.url, class: 'fancybox' do
          = image_tag f.object.title_picture.url(:thumb)
      = f.input :content, input_html: { class: 'ckeditor' }

    #gallery.tab-pane.fade
      = f.input :pictures, as: :image, multiple: true, label: false

  br.clearfix
  = f.button :submit
